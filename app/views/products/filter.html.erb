<h1>Java The Hutt</h1>
<%= link_to "Our Varieties", varieties_path %><br>

<%= link_to "New Product", new_product_path %>

<div class="field">
        <label>Filter: </label>


</div>
<%= form_with(url: filter_products_path, method: :get, local: true) do %>
  <%= select_tag "filter", options_for_select([["On Sale", 1], ["Recently Updated", 2]], ),{include_blank: 'Select Filter'} %>
  <%= submit_tag 'Filter' %>
<% end %>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= link_to product.name, product %>: $<%= product.price %>
    </li>
  <% end %>
</ul>